<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <config>
    <!-- Ensure the use of TLS 1.2 and TLS 1.3 -->
    <add key="http-client.sslProtocols" value="Tls12,Tls13" />
    
    <!-- Ignore SSL errors temporarily for testing purposes (remove this in production) -->
    <add key="http-client-ssl-error" value="ignore" />
    
    <!-- Optional: Specify custom certificate bundle path if necessary -->
    <add key="GIT_SSL_CAINFO" value="/etc/pki/tls/certs/ca-bundle.crt" />
  </config>
  
  <packageSources>
    <!-- Add the Nexus repository source -->
    <add key="Nexus" value="https://nexusrepo-tools.apps.bld.cammis.medi-cal.ca.gov/repository/nuget-hosted/" />
  </packageSources>
  
  <packageSourceCredentials>
    <Nexus>
      <!-- Provide Nexus credentials (consider using environment variables or credentials plugin in Jenkins) -->
      <add key="Username" value="nexuspoc" />
      <add key="ClearTextPassword" value="Nexus123!" />
    </Nexus>
  </packageSourceCredentials>
</configuration>
